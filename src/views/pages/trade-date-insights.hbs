<div class="container-fluid">
  <div class="row g-4">
    <div class="col-12">
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">
        <div>
          <h1 class="h3 mb-1">
            <i class="fas fa-bullseye me-2"></i>
            Trade Outliers on {{formatDate targetDate}}
          </h1>
          <p class="text-muted mb-0">
            {{strategy.name}} &middot; Backtest {{backtestPeriodLabel}} ({{formatDate backtest.startDate}} â€“ {{formatDate backtest.endDate}})
          </p>
        </div>
        <div class="mt-3 mt-md-0 d-flex flex-column flex-sm-row gap-2">
          <a href="{{backtestLink}}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>
            Back to Backtest
          </a>
          <a href="{{tradesPageUrl}}" class="btn btn-primary">
            <i class="fas fa-table me-2"></i>
            Open Trades Page
          </a>
        </div>
      </div>
    </div>

    <div class="col-12 col-xl-3">
      <div class="card h-100">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="fas fa-info-circle me-2"></i>
            Summary
          </h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
              <span class="text-muted">Trades Evaluated</span>
              <span class="fw-bold">{{summary.total}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
              <span class="text-muted">Opened on Date</span>
              <span class="fw-bold">{{summary.opened}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
              <span class="text-muted">Active on Date</span>
              <span class="fw-bold">{{summary.active}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
              <span class="text-muted">Closed on Date</span>
              <span class="fw-bold">{{summary.closed}}</span>
            </li>
          </ul>
          {{#if dateOutOfRange}}
            <div class="alert alert-warning mt-3 mb-0 small">
              Selected date is outside the stored backtest range. Data may be incomplete.
            </div>
          {{else}}
            <div class="small text-muted mt-3">
              Ranked by absolute move from entry price to the daily price snapshot.
            </div>
          {{/if}}
        </div>
      </div>
    </div>

    <div class="col-12 col-xl-9">
      <div class="card h-100">
        <div class="card-header">
          <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center">
            <div>
              <h5 class="card-title mb-1">
                <i class="fas fa-chart-line me-2"></i>
                Top Moves on {{formatDate targetDate}}
              </h5>
              <p class="text-muted mb-0">Trades opened, closed, or active on {{targetDateString}}</p>
            </div>
            <span class="badge bg-light text-dark mt-2 mt-lg-0">
              {{summary.total}} trades found
            </span>
          </div>
        </div>
        <div class="table-responsive">
          {{#if trades.length}}
            <table class="table table-sm table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th class="ps-3">#</th>
                  <th>Ticker</th>
                  <th class="text-end">Move %</th>
                  <th class="text-end">Move $</th>
                  <th class="text-end">Qty</th>
                  <th class="text-end">Entry</th>
                  <th class="text-end">Price on Date</th>
                  <th>Status on Date</th>
                  <th>Entry Date</th>
                  <th>Exit Date</th>
                  <th class="text-center">Details</th>
                </tr>
              </thead>
              <tbody>
                {{#each trades}}
                  <tr class="align-middle">
                    <td class="text-muted small ps-3">{{rank}}</td>
                    <td class="fw-bold">
                      <a href="/trades/{{id}}" class="text-decoration-none">{{ticker}}</a>
                    </td>
                    <td class="text-end fw-bold {{#if (gte movePercent 0)}}text-success{{else}}text-danger{{/if}}">
                      {{toFixed movePercent 2}}%
                    </td>
                    <td class="text-end small {{#if (gte moveValue 0)}}text-success{{else}}text-danger{{/if}}">
                      {{formatCurrency moveValue}}
                    </td>
                    <td class="text-end small">{{quantity}}</td>
                    <td class="text-end small">${{formatPrice entryPrice}}</td>
                    <td class="text-end small">
                      ${{formatPrice priceOnDate}}
                      <div class="text-muted small">
                        {{#if (eq priceSource 'exit')}}
                          Exit Price
                        {{else if (eq priceSource 'close')}}
                          Market Close
                        {{else if (eq priceSource 'closeFallback')}}
                          Previous Close
                        {{else}}
                          Entry Price
                        {{/if}}
                      </div>
                    </td>
                    <td>
                      {{#if statusTags.length}}
                        <div class="d-flex flex-wrap gap-1">
                          {{#each statusTags}}
                            <span class="badge bg-secondary">{{this}}</span>
                          {{/each}}
                        </div>
                      {{else}}
                        <span class="text-muted small">N/A</span>
                      {{/if}}
                    </td>
                    <td class="small">{{formatDate entryDate}}</td>
                    <td class="small">
                      {{#if exitDate}}
                        {{formatDate exitDate}}
                      {{else}}
                        <span class="text-muted">Open</span>
                      {{/if}}
                    </td>
                    <td class="text-center">
                      <a href="{{tradeUrl}}" class="btn btn-outline-primary btn-sm">
                        View
                      </a>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          {{else}}
            <div class="p-5 text-center text-muted">
              No trades were opened, closed, or active on this date.
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
