<div class="container-fluid">
    <div class="row g-4">
        <div class="col-12">
            <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center">
                <div>
                    <h1 class="h3 mb-1">Signal Skips for {{strategy.name}}</h1>
                    <p class="text-muted mb-0">Compare skip reasons between engine backtests and operation planning.</p>
                </div>
                <div class="mt-3 mt-lg-0">
                    <a href="/strategies/{{strategy.id}}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>
                        Back to Strategy
                    </a>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center">
                        <div>
                            <h5 class="card-title mb-1">
                                <i class="fas fa-stream me-2"></i>
                                Target Day
                            </h5>
                            <p class="text-muted mb-0">Pick a day to compare skip reasons between sources.</p>
                        </div>
                        <form method="get" action="/strategies/{{strategy.id}}/skips" class="d-flex flex-wrap gap-2 mt-3 mt-lg-0">
                            <div>
                                <label for="skipDate" class="form-label text-muted small mb-1">Date</label>
                                <input id="skipDate" type="date" name="date" value="{{selectedDate}}" class="form-control form-control-sm">
                            </div>
                            <div class="d-flex align-items-end">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fas fa-filter me-2"></i>
                                    Load
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                {{#if latestDate}}
                <div class="card-body border-bottom py-2">
                    <div class="small text-muted">Latest skip date: {{latestDate}}</div>
                </div>
                {{/if}}
                {{#if hasAnySkips}}
                <div class="card-body border-bottom">
                    <div class="row g-3">
                        <div class="col-12 col-lg-4">
                            <h6 class="text-muted text-uppercase small mb-2">Signals</h6>
                            {{#if summary.hasSignals}}
                            <div class="table-responsive">
                                <table class="table table-sm mb-0 text-nowrap">
                                    <thead class="table-light">
                                        <tr>
                                            <th scope="col">Type</th>
                                            <th scope="col">{{sourceLabels.backtest}}</th>
                                            <th scope="col">{{sourceLabels.planOperations}}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each summary.signals}}
                                        <tr>
                                            <th scope="row" class="text-muted">{{label}}</th>
                                            <td>{{backtest}}</td>
                                            <td>{{planOperations}}</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                            {{else}}
                            <div class="text-muted small">No signals recorded for the selected day.</div>
                            {{/if}}
                        </div>
                        <div class="col-12 col-lg-8">
                            <h6 class="text-muted text-uppercase small mb-2">Skip Reasons</h6>
                            {{#if summary.hasReasons}}
                            <div class="table-responsive">
                                <table class="table table-sm mb-0 text-nowrap">
                                    <thead class="table-light">
                                        <tr>
                                            <th scope="col">Reason</th>
                                            <th scope="col">{{sourceLabels.backtest}}</th>
                                            <th scope="col">{{sourceLabels.planOperations}}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each summary.reasons}}
                                        <tr>
                                            <th scope="row" class="text-muted">{{label}}</th>
                                            <td>{{backtest}}</td>
                                            <td>{{planOperations}}</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                            {{else}}
                            <div class="text-muted small">No skip reasons recorded for the selected day.</div>
                            {{/if}}
                        </div>
                    </div>
                </div>
                {{/if}}
                <div class="table-responsive">
                    {{#if hasAnySkips}}
                        {{#if hasRows}}
                        <table class="table table-sm align-middle mb-0 text-nowrap">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Ticker</th>
                                    <th scope="col" style="width: 140px;">Signal Type</th>
                                    <th scope="col">
                                        {{sourceLabels.backtest}} skip reason
                                        {{#if (gt totals.backtest 0)}}
                                            <span class="text-muted">({{totals.backtest}})</span>
                                        {{/if}}
                                    </th>
                                    <th scope="col">
                                        {{sourceLabels.planOperations}} skip reason
                                        {{#if (gt totals.planOperations 0)}}
                                            <span class="text-muted">({{totals.planOperations}})</span>
                                        {{/if}}
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each rows}}
                                <tr>
                                    <th scope="row" class="text-muted">{{ticker}}</th>
                                    <td>
                                        <span class="badge bg-{{actionBadge}} text-uppercase">{{actionLabel}}</span>
                                    </td>
                                    <td>
                                        {{#if backtest.hasItems}}
                                            <span class="small text-muted text-nowrap">{{backtest.text}}</span>
                                        {{else}}
                                            <span class="text-muted">&mdash;</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if planOperations.hasItems}}
                                            <span class="small text-muted text-nowrap">{{planOperations.text}}</span>
                                        {{else}}
                                            <span class="text-muted">&mdash;</span>
                                        {{/if}}
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        {{else}}
                        <div class="alert alert-light border-0 mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            No skips recorded for the selected day.
                        </div>
                        {{/if}}
                    {{else}}
                    <div class="alert alert-light border-0 mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        No skip data recorded for this strategy yet.
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
